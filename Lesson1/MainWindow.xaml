<Window x:Class="Lesson1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson1"
        mc:Ignorable="d"
        Title="Fibbonaci" Height="450" Width="800" Background="LightSlateGray">
    <Grid>
        <TextBox Name="Numbers" 
                 HorizontalAlignment="Left" 
                 Margin="10,10,0,0"
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 FontSize="20"
                 Background="LightSlateGray" BorderThickness="0,0,0,0"/>
        <Button Content="Start" 
                HorizontalAlignment="Center" 
                Margin="0,254,0,0" 
                VerticalAlignment="Top" 
                Height="65" 
                Width="150" 
                FontSize="35" 
                Click="Button_Click" 
                Background="IndianRed" 
                BorderBrush="Azure" 
                BorderThickness="2" FontFamily="Curlz MT"/>
    </Grid>
</Window>
