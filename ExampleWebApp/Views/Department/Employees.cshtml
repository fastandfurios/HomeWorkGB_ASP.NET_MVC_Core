@model ICollection<Employee>

@{
    ViewBag.Title = "Сотрудники отдела";
}

@if (Model?.Any() is true)
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Премия</th>
            <th>Адрес</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.LastName</td>
                <td>@employee.Salary.ToString("C")</td>
                <td>@employee.Address</td>
                <td>
                    <a asp-action="EditEmployee" asp-route-id="@employee.Id">
                        <i class="fa fa-edit"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Ни одного сотрудника не было найдено</p>
}